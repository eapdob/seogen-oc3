                                        {% for profile in profiles %}
                                            <option data-id="{{ profile['profile_id'] }}"
                                                    id="profile-{{ profile['profile_id'] }}">
                                                {{ profile['name'] }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
