            <a id="generate_url" style="display: none" href="{{ generate}}"></a>
            <script src="view/javascript/ckeditor/ckeditor.js"></script>
            <script>
                function generate(selector) {
                    $(".success").remove();
                    //update summernote
                    $('.summernote').each(function(i, e){
                        if($(this).code != undefined) {
                            $(this).val($(this).code());
                        }
                    });

                    var data = $('#tab-' + selector + ' :input, #seogen_language_id, #including :input').serialize()
                        + '&name=' + selector;
                    $.post($('#generate_url').attr('href'), data, function(html) {
                        $(".breadcrumb").after('<div class="alert alert-success"><i class="fa fa-check-circle"></i> ' +
                            html +
                            '<button type="button" class="close" data-dismiss="alert">&times;</button></div>');

                    });
                }

                $('.seogen_overwrite').change(function(){
                    $('.overwrite:visible').prop('checked', $(this).prop('checked'))
                });

                $(document).ready(function() {
                    $("#form tr:even").css("background-color", "#F4F4F8");
                });

                $('#tabs a').tabs();
            </script>
        </div>
