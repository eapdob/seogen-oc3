    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary" onclick="$('#form').submit();">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"
                   onclick="location = '{{ cancel }}';">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breabcrumb in breadcrumbs %}
                    <li><a href="{{ breabcrumb.href }}">{{ breabcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
