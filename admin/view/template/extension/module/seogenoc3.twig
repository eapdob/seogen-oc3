                        <label class="col-sm-2 control-label" for="seogen_language_id">{{ entry_language }}</label>
                        <div class="col-sm-4">
                            <select name="seogenoc3[language_id]" id="seogen_language_id" class="form-control">
                                {% for lang in languages %}
                                    <option value="{{ lang['language_id'] }}">{{ lang['name'] }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
